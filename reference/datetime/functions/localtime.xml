 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>time</function> の例</title>
    <programlisting role="php">
<![CDATA[
<?php
$localtime = localtime();
$localtime_assoc = localtime(time(), true);
print_r($localtime);
print_r($localtime_assoc);
]]>
    </programlisting>
